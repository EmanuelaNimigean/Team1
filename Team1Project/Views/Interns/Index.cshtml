@model IEnumerable<Team1Project.Models.Intern>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/lib/microsoft-signalr/signalr.js"></script>
    <script src="~/js/IndexIntern.js"></script>
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<h1>Index</h1>
@if (User.IsInRole("Operator"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GithubUsername)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody id="internTableBodyId">
        @foreach (var item in Model)
        {
            <tr intern-id="@item.Id">
                <td intern-name="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td intern-birthdate="@item.Id">
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td intern-emailaddress="@item.Id">
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td intern-teamid="@item.Id">
                    @Html.DisplayFor(modelItem => item.Team.Id)
                </td>
                <td intern-githubusername="@item.Id">
                    @Html.DisplayFor(modelItem => item.GithubUsername)
                </td>
                <td>
                    @if (User.IsInRole("Operator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span> |</span>
                    }

                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Operator"))
                    {
                        <span> | </span><a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
