@model Team1Project.Models.Intern

@section Scripts{ 
<script type="text/javascript" src="~/js/DetailsInterns.js"></script>
}

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Intern</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10" id="getAge">
            <span id="@Model.Id"></span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Id)
        </dd>
        <dt class="col-sm-2">
            GitHub username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GithubUsername)
        </dd>
        <dt class="col-sm-2">
            Git repositories
        </dt>
        <dd class="col-sm-10" id="getNumberOfRepos">
            <span id="@Model.Id"></span>
        </dd>
        <dt class="col-sm-2">
            Commits this year
        </dt>
        <dd class="col-sm-10">

        </dd>
        <dt class="col-sm-2">
            Avg commits/month
        </dt>
        <dd class="col-sm-10">

        </dd>
    </dl>
</div>

<div>
    <a asp-action="ListRepos" asp-route-id="@Model.Id">View list of repositories</a>
</div>
<hr>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
